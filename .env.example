# Local AI Configuration (alternative)
LOCAL_AI_URL="http://localhost:11434/api/generate"
LOCAL_AI_MODEL="codellama"

# ===========================================
# APPLICATION
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Cloud Code Editor"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="100"
AI_RATE_LIMIT_MAX_REQUESTS="20"

# ===========================================
# FILE STORAGE
# ===========================================
# Supported: database, s3, local
STORAGE_PROVIDER="database"

# S3 Configuration (if using s3)
S3_BUCKET="your-bucket-name"
S3_REGION="us-east-1"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"

# Local storage path (if using local)
LOCAL_STORAGE_PATH="./storage"

# ===========================================
# SECURITY
# ===========================================
# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=".html,.css,.js,.json,.md,.ts,.tsx,.py,.jsx"

# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE="5242880"

# Maximum files per project
MAX_FILES_PER_PROJECT="100"

# Maximum projects per user
MAX_PROJECTS_PER_USER="20"
